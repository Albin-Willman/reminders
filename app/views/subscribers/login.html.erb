<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h1>Please login</h1>
    
    <%= form_tag login_path do %>
      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, '', class: 'form-control' %>
      </div>
      <div class="actions">
        <%= submit_tag 'Login', class: 'btn btn-success' %>
      </div>

    <% end %>
  </div>
</div>